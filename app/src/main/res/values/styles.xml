<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppTheme"/>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="CommentInput" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:inputType">textMultiLine|textCapSentences</item>
        <item name="android:maxLines">3</item>
        <item name="android:textColorHint">@color/grey1</item>
        <item name="android:textSize">@dimen/text_size_2</item>
        <item name="android:textColorHighlight">@color/white</item>
        <item name="android:textColorLink">@color/white</item>
        <item name="android:background">@color/grey2</item>
        <!--<item name="android:textCursorDrawable">@drawable/search_cursor_light</item>-->
    </style>

</resources>
