<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     tools:context="co.lateralview.interviewtest.ui.fragment.CommentsFragment">

    <LinearLayout
        android:id="@+id/fragment_comments_progress_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_comments_rv"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/fragment_comments_add_comment_bt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/fragment_comments_add_comment_bt"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:background="@color/primary"/>

    </LinearLayout>

</RelativeLayout>
