<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/item_thread_margin_top"
    android:layout_marginBottom="@dimen/item_thread_margin_bottom"
    android:orientation="vertical">

        <TextView
            android:id="@+id/item_thread_created_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/thread_tv_padding" />

        <TextView
            android:id="@+id/item_thread_id_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/thread_tv_padding" />

        <TextView
            android:id="@+id/item_thread_url_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/thread_tv_padding" />

        <TextView
            android:id="@+id/item_thread_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/thread_tv_margin_top"
            android:background="@color/white"
            android:padding="@dimen/thread_tv_padding" />
        <TextView
            android:id="@+id/item_thread_user_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/thread_tv_margin_top"
            android:background="@color/white"
            android:padding="@dimen/thread_tv_padding" />


</LinearLayout>